<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/padding_big_value"
    android:layout_height="wrap_content"
    android:background="@drawable/history">

    <TextView
        android:background="@drawable/ic_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvIcon" />

    <TextView
        android:layout_marginLeft="@dimen/small_activity_left_margin"
        android:layout_width="@dimen/width_small_text"
        android:layout_height="@dimen/height_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic"
        android:textColor="@color/DarkGreen"
        android:id="@+id/tvContent"/>

    <ImageView
        android:background="@drawable/ic_delete"
        android:layout_marginLeft="@dimen/medium_activity_left_margin"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgDel" />

</LinearLayout>