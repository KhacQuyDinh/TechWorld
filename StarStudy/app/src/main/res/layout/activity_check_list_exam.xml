<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvGioiThieu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="@string/loidan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0044ff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <GridView
        android:id="@+id/gvListExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.98"
        android:background="@drawable/button_02"
        android:numColumns="2"></GridView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#0011ff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button"
            android:text="QUAY LẠI"
            android:textColor="#0044ff" />

        <Button
            android:id="@+id/btnNopBai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button"
            android:text="NỘP BÀI"
            android:textColor="#0044ff" />
    </LinearLayout>
</LinearLayout>