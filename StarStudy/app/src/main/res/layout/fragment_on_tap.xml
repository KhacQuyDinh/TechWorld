<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anhnguyen.com.vn.starstudy.chuongtrinh.OnTap">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#787373"
            android:layout_marginTop="10dp"
            android:id="@+id/ontap_montoan">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/iconmonhoc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn Toán"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#787373"
            android:layout_marginTop="10dp"
            android:id="@+id/ontap_monly">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/iconmonhoc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn Lý"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#787373"
            android:layout_marginTop="10dp"
            android:id="@+id/ontap_monhoa">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/iconmonhoc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn Hóa"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
